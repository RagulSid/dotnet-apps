@page
@model AuctionSystem.Pages.AdminHome.addHotels.addHotelModel
@{
}

<h2>WelCome To Add Hotel</h2>

@if (Model.errorMessage.Length > 0)
{
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
}
@if (Model.successMessage.Length > 0)
{
          <div class="alert alert-success alert-dismissible fade show">
                <div class="col-sm-9">
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' alert-label='close'></button>
                </div>
            </div>
}

<form method="POST" enctype="multipart/form-data">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Hotelname</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="hotelname" value="@Model.productInfo.hotelname" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Hotelimage</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="hotelimage" value="@Model.productInfo.hotelimage" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="location" value="@Model.productInfo.location" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Rating</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="rating" value="@Model.productInfo.rating" />
        </div>
    </div>
   
      


   

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3-d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
       
    </div>

</form>